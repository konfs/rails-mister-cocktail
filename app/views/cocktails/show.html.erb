<h1> Cocktail: <%= @cocktail.name %> </h1>

<h3> Recipe </h3>
<ul>
<% @cocktail.doses.each do |dose| %>
<li>
<%= dose.description %> of <%= dose.ingredient.name %>
<%= link_to "<< remove",
    dose_path(dose),
    method: :delete,
    data: {confirm: "Are you sure?"} %>
</li>
<% end %>
</ul>

<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to 'Back', root_path %>

